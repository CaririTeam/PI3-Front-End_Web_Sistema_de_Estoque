{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": [
        "cypress/**/*.cy.js"
      ],
      "extends": [
        "plugin:cypress/recommended"
      ]
    },
    {
      "files": [
        "cypress.config.js"
      ],
      "env": {
        "node": true
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    ".github/"
  ]
}